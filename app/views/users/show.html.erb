
<div class="user-profile">
  <div class="profile row">
    <% if ( current_user.id == @user.id) %>
        <div class="col-md-4 avatar">
            <div class="wrapper">
              <% if current_user.avatar? %>        
                <%= image_tag current_user.avatar_url %>     
              <% end %>             
            </div>
        </div>
  
        <div class="col-md-8 basic-info">
          
            <div class="user-wrapper">
                <h2 class="username"><%= current_user.username %></h2>
                <a class="edit-profile" href="<%= edit_user_path(current_user) %>">
                    <button>Edit Profile</button>
                </a>
            </div>
            <ul class="posts">
                <li><span><%= @posts.count %></span> posts</li>
                <li><span>195</span> followers</li>
                <li><span>345</span> following</li>
            </ul>
            <h2 class="name"><%= current_user.name %></h2>
            <%= link_to current_user.website, current_user.website, :class =>'website' %>
         
        </div>
    <% else %>
      <div class="col-md-4 avatar">
            <div class="wrapper">
              <% if @user.avatar? %>        
                <%= image_tag @user.avatar_url %>     
              <% end %>             
            </div>
      </div>
      <div class="col-md-8 basic-info">
        <div class="user-wrapper">
          <h2 class="username"><%= @user.username %></h2>
        </div>
        <ul class="posts">
          <li><span><%= @posts.count %></span> posts</li>
          <li><span>195</span> followers</li>
          <li><span>345</span> following</li>
        </ul>
        <h2 class="name"><%= @user.name %></h2>
        <%= link_to @user.website, @user.website, :class =>'website' %> 
      </div>       
    <% end %>
  </div>
</div>

<div class="user-tabs">
  <a class="tab active" href="">
    <i class="fa fa-th"></i>
    POSTS
  </a>
  <a class="tab" href="">
    <i class="fa fa-tv"></i>
    IGTV
  </a>
  <a class="tab" href="">
    <i class="fa fa-bookmark"></i>
    SAVED
  </a>
  <a class="tab" href="">
    <i class="fa fa-tag"></i>
    TAGGED
  </a>
</div>
<div class="user-images">
  <% @posts.each do |post| %>
    <div class="wrapper">
        <%= link_to image_tag (post.image_url ) , post_path(post) %>
    </div>
  <% end %>
  <div class="wrapper">
    <img src="/images/books.jpg">
  </div>
  <div class="wrapper">
    <img src="/images/beach.jpg">
  </div>
  <div class="wrapper">
    <img src="/images/trip.jpg">
  </div>
</div>