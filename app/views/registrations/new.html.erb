<div class="ibox-content">

  <h2>Sign up</h2>

  <% form_for resource_name, resource, :url => registration_path(resource_name) do |f| -%>
    <%= f.error_messages %>
    <div class="form-group m-t">
      <%= f.label :email %><br />
      <%= f.text_field :email, :placeholder=>"................@example.com" %>
    </div>

    <div class="form-group"> 
      <%= f.label :password %><br />
      <%= f.password_field :password,:placeholder=>"minimum 6" %>
    </div>

    <div class="form-group"> 
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation,:placeholder=>"minimum 6" %>
    </div>

    <p><%= f.submit "Sign up" %></p>
  <% end -%>

  <%= render :partial => "shared/devise_links" %>

</div>
